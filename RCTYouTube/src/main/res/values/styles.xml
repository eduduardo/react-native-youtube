<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

        <style parent="@style/text_style" name="title_style">
            <item name="android:textSize">20sp</item>
            <item name="android:layout_margin">10dp</item>
            <item name="android:layout_gravity">center</item>
        </style>

        <style parent="@style/text_style" name="description_style">
            <item name="android:textSize">14sp</item>
            <item name="android:padding">10dp</item>
        </style>

    <style name="icon_button_style">
        <item name="android:background">@null</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

        <style parent="@style/icon_button_style" name="back_button_style">
            <item name="android:src">@drawable/ic_chevron_left</item>
            <item name="android:tint">@android:color/white</item>
            <item name="android:layout_marginTop">10dp</item>
            <item name="android:layout_marginBottom">10dp</item>
            <item name="android:layout_marginLeft">10dp</item>
        </style>
</resources>